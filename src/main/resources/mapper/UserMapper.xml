<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.road_friends.rentalcar.mapper.UserMapper">
    <resultMap id="UserWithRoles" type="com.road_friends.rentalcar.dto.UserDTO">
        <id property="user_num" column="user_num"/> <!-- user_num으로 변경 -->
        <result property="user_id" column="user_id"/>
        <result property="user_name" column="user_name"/> <!-- user_name으로 변경 -->
        <result property="user_password" column="user_password"/> <!-- user_password으로 변경 -->
        <result property="user_email" column="user_email"/> <!-- user_email 추가 -->
        <result property="user_phone" column="user_phone"/> <!-- user_phone 추가 -->
        <result property="user_gender" column="user_gender"/> <!-- user_gender 추가 -->
        <result property="user_birth" column="user_birth"/> <!-- user_birth 추가 -->
        <result property="user_address" column="user_address"/> <!-- user_address 추가 -->
        <result property="user_status" column="user_status"/> <!-- user_status 추가 -->
        <result property="enabled" column="enabled"/> <!-- enabled 필드 추가 -->
        <collection property="roles" ofType="com.road_friends.rentalcar.dto.RoleDTO">
            <id property="id" column="role_id"/>
            <result property="name" column="role_name"/>
        </collection>
    </resultMap>


    <insert id="save" parameterType="com.road_friends.rentalcar.dto.UserDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (user_id, username, password, enabled)
        VALUES (#{user_id}, #{username}, #{password}, #{enabled})
    </insert>
    <select id="findByUsername" resultMap="UserWithRoles">
        SELECT
        u.user_num as user_num,
        u.user_id as user_id,
        u.user_name,
        u.user_password,
        u.enabled,
        r.id as role_id,
        r.name as role_name
        FROM user u
        LEFT JOIN user_roles ur ON u.user_num = ur.user_id
        LEFT JOIN roles r ON ur.role_id = r.id
        WHERE u.user_id = #{user_id};
    </select>



</mapper>
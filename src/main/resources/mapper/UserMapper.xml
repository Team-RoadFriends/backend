<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadfriends.mapper.UserMapper">

    <!-- 전체 회원 수 조회 -->
    <select id="getTotalUsers" resultType="int">
        SELECT COUNT(*) FROM user
    </select>

    <!-- 성별 통계 조회 -->
    <select id="getGenderStats" resultType="map">
        SELECT user_gender, COUNT(*) AS count FROM user GROUP BY user_gender
    </select>

    <!-- 연령대 통계 (생년월일 기준) -->
    <select id="getUserBirthDates" resultType="java.util.Date">
        SELECT user_birth FROM user
    </select>

</mapper>
